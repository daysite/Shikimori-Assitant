  if (isNewLogin) console.log(chalk.greenBright("â› Login exitoso â€” Waguri Ai conectado."));

  if (connection === "connecting") console.log(chalk.yellow("âœ¿ Estableciendo conexiÃ³n espiritual..."));
  if (connection === "open") console.log(chalk.cyan("â˜ï¸ ConexiÃ³n abierta â€” sincronizado con Arvandor."));
  if (isOnline === true) console.log(chalk.green("âš¿ Estado: Conectado."));
  if (isOnline === false) console.log(chalk.red("âš¿ Estado: Desconectado."));
  if (receivedPendingNotifications) console.log(chalk.magenta("âœ Notificaciones astrales pendientes."));

  if (connection === "close") {
    console.log(chalk.red("âš ï¸ ConexiÃ³n perdida. Intentando reconectar..."));
    const status = lastDisconnect?.error?.output?.statusCode || lastDisconnect?.error?.output?.payload?.statusCode;
    const motivo = DisconnectReason[status] || "Desconocido";

    if (status !== DisconnectReason.loggedOut && status !== DisconnectReason.blockedNumber) {
      console.log(chalk.redBright(`â¤¿ Motivo de desconexiÃ³n: ${motivo}`));
      await reload(this, true, opts).catch(console.error);
    }
  }

  if (global.db?.data == null) await global.loadDatabase();
}

export async function importFile(module) {
  module = resolve(module);
  module = await import(`${module}?id=${Date.now()}`);
  return module?.default || module;
}

